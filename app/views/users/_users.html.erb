<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
          <div class="media-body">
            <div><%= current_user.name %>
            </div>
            <div><p><%= link_to 'view profile', user_path(current_user) %></p></div>
          </div>
      </li>
    <% end %>
  </ul>
<%= paginate users %>
<% end %>