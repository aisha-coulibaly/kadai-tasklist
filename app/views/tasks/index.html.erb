<% if logged_in? %>


<h1>タスク一覧</h1>
<!--%= render 'tasks/tasklists', tasks: @tasks %-->
 <% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>メッセージ</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
      </tr>
      <% end %>
    </tbody>
</table>

  <%= paginate @tasks %>

<% end %>
<%= link_to '新規タスクの追加', new_task_path, class: 'btn btn-primary' %>

<% else %>




<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the TaskList</h1>
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>

<% end %>


